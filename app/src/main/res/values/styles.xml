<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="AppThemeMars" parent="AppTheme">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryVariant">#FF9800</item>
        <item name="colorSurface">#FFC107</item>
        <item name="colorAccent">#FF2222</item>
    </style>

    <style name="AppThemeSpace" parent="AppTheme">
        <item name="colorPrimary">#97A5F3</item>
        <item name="colorPrimaryVariant">#6B7BD3</item>
        <item name="colorSurface">#97A5F3</item>
        <item name="colorAccent">#0C4F8A</item>
    </style>

    <style name="AppThemeMoon" parent="AppTheme">
        <item name="colorPrimary">#BFBFBF</item>
        <item name="colorPrimaryVariant">#818181</item>
        <item name="colorSurface">#BFBFBF</item>
        <item name="colorAccent">#D61515</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidgetConstraintLayout" parent="MatchParent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="TextInputLayoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipHorizontalScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ChipGroupHorizontalScrollView"  parent="WrapContent">
        <item name="chipSpacingHorizontal">25dp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="ChipClose" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipGroupSettings" parent="WrapContent">
        <item name="android:layout_marginTop">48dp</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="ChipEntry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipAction" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipBlue" parent="WrapContent">
        <item name="chipBackgroundColor">@android:color/holo_blue_bright</item>
    </style>

    <style name="ChipOrange" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="ChipIcon" parent="WrapContent">
        <item name="iconStartPadding">10dp</item>
        <item name="chipIcon">@drawable/ic_archive</item>
    </style>

    <style name="ChipGroup" parent="WrapContent">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ChipGroupChoice" parent="WrapContent">
        <item name="singleSelection">true</item>
    </style>

    <style name="ChipGroupText" parent="WrapContent">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LinearLayoutChips">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="QuilateralImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="srcCompat">@drawable/ic_no_photo_vector</item>
    </style>

    <style name="BottomAppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="fabAlignmentMode">center</item>
        <item name="hideOnScroll">true</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="navigationIcon">@drawable/ic_hamburger_menu_bottom_bar</item>
    </style>

    <style name="FloatingActionButton" parent="WrapContent">
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="layout_anchor">@id/bottom_app_bar</item>
        <item name="srcCompat">@drawable/ic_plus_fab</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="BottomSheetContainer" parent="MatchParent">
        <item name="android:background">#f6f6fa</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">100dp</item>
        <item name="android:visibility">gone</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>

    <style name="BottomSheetLine">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#663b4351</item>
    </style>

    <style name="BottomSheetDescriptionHeader" parent="BottomSheetDescription">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDescription" parent="WrapContent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="NavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>
